---
const images = [
  { src: "/assets/html.png", alt: "HTML" },
  { src: "/assets/css.png", alt: "CSS" },
  { src: "/assets/ts.png", alt: "TypeScript" },
  { src: "/assets/json.png", alt: "JSON" },
];
---

<section class="gallery" id="gallery">
  <div class="container">
    <h2 class="section-title">Galer√≠a</h2>
    <div class="gallery-container">
      {
        images.map((img, i) => (
          <figure class="gallery-item">
            <img src={img.src} alt={img.alt} data-index={i} class="clickable" />
            <figcaption>{img.alt}</figcaption>
          </figure>
        ))
      }
    </div>

    <!-- Lightbox -->
    <div id="lightbox" class="lightbox">
      <span class="close">&times;</span>
      <img class="lightbox-content" id="lightbox-img" alt="Imagen ampliada" />
      <div id="caption"></div>
    </div>
  </div>
</section>

<style>
  .gallery {
    background: var(--bg-editor);
    padding: 2rem;
  }

  .gallery-container {
    max-width: var(--container);
    margin: 0 auto;
    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  }

  .gallery-item {
    background: var(--panel-bg);
    border-radius: var(--radius);
    overflow: hidden;
    box-shadow: 0 4px 10px var(--shadow);
    display: flex;
    gap: 20px;
    flex-direction: column;
    transition:
      transform 0.25s ease,
      box-shadow 0.25s ease;
    cursor: pointer;
    width: 250px;
  }

  .gallery-item:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px var(--shadow);
  }

  .gallery-item img {
    width: 100%;
    height: auto;
    display: block;
    border-bottom: 2px solid var(--accent-teal);
  }

  .gallery-item figcaption {
    padding: 0.75rem 1rem;
    font-size: 0.9rem;
    color: var(--fg-editor);
    background: var(--panel-bg);
    border-top: 1px solid var(--panel-border);
  }

  /* Lightbox */
  .lightbox {
    display: none;
    position: fixed;
    z-index: 9999;
    inset: 0;
    background: rgba(0, 0, 0, 0.85);
    justify-content: center;
    align-items: center;
    flex-direction: column;
    padding: 1rem;
  }

  .lightbox img {
    max-width: 90%;
    max-height: 80vh;
    border-radius: var(--radius);
    box-shadow: 0 8px 20px var(--shadow);
  }

  .lightbox #caption {
    margin-top: 1rem;
    color: var(--fg-editor);
    font-size: 1rem;
    text-align: center;
  }

  .lightbox .close {
    position: absolute;
    top: 1rem;
    right: 1.5rem;
    font-size: 2rem;
    color: var(--accent-yellow);
    cursor: pointer;
    user-select: none;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const lightbox = document.getElementById(
      "lightbox"
    ) as HTMLDivElement | null;
    const lightboxImg = document.getElementById(
      "lightbox-img"
    ) as HTMLImageElement | null;
    const captionText = document.getElementById(
      "caption"
    ) as HTMLDivElement | null;
    const closeBtn = lightbox?.querySelector(
      ".close"
    ) as HTMLSpanElement | null;

    document
      .querySelectorAll<HTMLImageElement>(".gallery-item img")
      .forEach((img) => {
        img.addEventListener("click", () => {
          if (!lightbox || !lightboxImg || !captionText) return;
          lightbox.style.display = "flex";
          lightboxImg.src = img.src;
          captionText.textContent = img.alt;
        });
      });

    closeBtn?.addEventListener("click", () => {
      if (lightbox) lightbox.style.display = "none";
    });

    lightbox?.addEventListener("click", (e) => {
      if (e.target === lightbox) {
        lightbox.style.display = "none";
      }
    });
  });
</script>
