<section id="palette" aria-label="Paleta de colores">
  <div class="container">
    <h2 class="section-title">Paleta de colores</h2>
    <!-- <p class="muted">Alguno de los valores del tema.</p> -->

    <div class="palette" role="list">
      <!-- Cada tarjeta usa solo variables del tema -->
      <div class="swatch" role="listitem">
        <div class="swatch-chip" style="background: var(--bg-editor)"></div>
        <strong>Editor Background</strong>
        <small>#172030 — <code>--bg-editor</code></small>
      </div>
      <div class="swatch" role="listitem">
        <div class="swatch-chip" style="background: var(--fg-editor)"></div>
        <strong>Editor Foreground</strong>
        <small>#bac8cb — <code>--fg-editor</code></small>
      </div>
      <div class="swatch" role="listitem">
        <div class="swatch-chip" style="background: var(--accent-teal)"></div>
        <strong>Accent Teal</strong>
        <small>#2aa198 — <code>--accent-teal</code></small>
      </div>
      <div class="swatch" role="listitem">
        <div class="swatch-chip" style="background: var(--accent-yellow)"></div>
        <strong>Accent Yellow</strong>
        <small>#FFCB6B — <code>--accent-yellow</code></small>
      </div>
      <div class="swatch" role="listitem">
        <div class="swatch-chip" style="background: #DDEB9D"></div>
        <strong>Strings</strong>
        <small>#DDEB9D — <code>--strings</code></small>
      </div>
      <div class="swatch" role="listitem">
        <div class="swatch-chip" style="background: #8E7DBE"></div>
        <strong>Numeric</strong>
        <small>#8E7DBE — <code>--numeric</code></small>
      </div>
      <div class="swatch" role="listitem">
        <div class="swatch-chip" style="background: #44a6d2"></div>
        <strong>Functions</strong>
        <small>#44a6d2 — <code>--functions</code></small>
      </div>
      <div class="swatch" role="listitem">
        <div class="swatch-chip" style="background: #af304a"></div>
        <strong>Modifiers</strong>
        <small>#af304a — <code>--modifiers</code></small>
      </div>
    </div>
  </div>
</section>

<style>
  .palette {
    display: grid;
    gap: 1rem;
    grid-template-columns: repeat(2, minmax(0, 1fr));
  }
  @media (min-width: 768px) {
    .palette {
      grid-template-columns: repeat(4, minmax(0, 1fr));
    }
  }
  .swatch {
    background: var(--panel-bg);
    border: 1px solid var(--panel-border);
    border-radius: var(--radius);
    padding: 1rem;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }
  .swatch-chip {
    height: 80px;
    border-radius: 10px;
    border: 1px solid var(--panel-border);
    margin-bottom: 0.75rem;
  }
  .swatch small {
    display: block;
    color: #8fa2a6;
  }
</style>
