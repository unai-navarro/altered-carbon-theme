<section class="hero" id="hero" aria-label="Presentación">
  <div class="container hero-grid">
    <div>
      <span class="kicker">Tema para VS Code</span>
      <h1>Altered Carbon</h1>
      <p>
        Tema oscuro inspirado en el esquema de colores del tema Carbon de
        IntelliJ IDEA.
      </p>

      <div class="badge" aria-label="Compatibilidad">
        <span>VS Code</span>
        <span aria-hidden="true">•</span>
        <span>VSCodium</span>
        <span aria-hidden="true">•</span>
        <span>Cursor</span>
      </div>

      <div class="hero-cta">
        <a
          id="downloadVsix"
          class="btn btn-primary"
          href="./assets/altered-carbon.vsix"
          download
          aria-label="Descargar archivo VSIX de Altered Carbon"
        >
          <!-- SVG inline ligero -->
          <svg
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              d="M12 3a1 1 0 0 1 1 1v8.586l2.293-2.293a1 1 0 1 1 1.414 1.414l-4.007 4.007a1.5 1.5 0 0 1-2.121 0L6.572 11.707a1 1 0 1 1 1.414-1.414L10 12.586V4a1 1 0 0 1 1-1zM5 19a1 1 0 1 0 0 2h14a1 1 0 1 0 0-2H5z"
            ></path>
          </svg>
          Descargar .vsix
        </a>
      </div>
    </div>

    <!-- Mockup editor -->
    <div class="mock" aria-label="Vista previa estilo VS Code">
      <div class="mock-titlebar">
        <div class="traffic" aria-hidden="true">
          <span class="dot" style="background: #e06c75"></span>
          <span class="dot" style="background: #e5c07b"></span>
          <span class="dot" style="background: #98c379"></span>
        </div>
        <strong>Altered Carbon</strong>
      </div>

      <div class="mock-body">
        <aside class="sidebar" aria-label="Barra lateral">
          <h4>EXPLORER</h4>
          <div class="item active">src</div>
          <div class="item">assets</div>
          <div class="item">README.md</div>
          <div class="item">package.json</div>
        </aside>

        <div class="editor">
          <div class="tabs" role="tablist" aria-label="Pestañas de archivos">
            <div
              class="tab active"
              role="tab"
              aria-selected="true"
              id="tab-js"
              tabindex="0"
            >
              app.js
            </div>
            <div
              class="tab"
              role="tab"
              aria-selected="false"
              id="tab-py"
              tabindex="0"
            >
              main.py
            </div>
          </div>

          <!-- Bloques de código (JS/Python) -->
          <div
            class="code-wrap"
            role="region"
            aria-label="Código de ejemplo con resaltado simulado"
          >
